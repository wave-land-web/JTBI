---
import { Image } from 'astro:assets'
import LogoPrimary from '../assets/images/logos/jtbi-logo-primary.svg'
import CloudImage from '../assets/images/textures/jtbi-cloud1-80-opacity.png'
import CloudImageTwo from '../assets/images/textures/jtbi-cloud2-80-opacity.png'
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts'
import Layout from '../layouts/Layout.astro'
---

<Layout>
  <header class="h-[80dvh] px-(--site-padding-base) relative flex justify-center items-center">
    <div class="overflow-hidden absolute inset-0">
      <Image
        src={CloudImage}
        alt="Cloud texture background"
        class="absolute top-1/2 left-1/2 w-auto h-auto max-w-md opacity-80 pointer-events-none cloud-drift-one lsa no-repeat"
        role="presentation"
        loading="eager"
      />
      <Image
        src={CloudImageTwo}
        alt="Secondary cloud texture background"
        class="absolute top-1/2 left-1/2 w-auto h-auto max-w-md opacity-80 pointer-events-none cloud-drift-two lsa no-repeat"
        role="presentation"
        loading="eager"
      />
    </div>
    <h1 class="sr-only">{SITE_TITLE}</h1>

    <div class="relative w-full max-w-xl z-10 lsa no-repeat delay-100">
      <LogoPrimary />
    </div>
  </header>

  <main
    class="max-w-screen-lg mx-auto pt-0 pb-(--site-padding-3xl) px-(--site-padding-base) text-center"
  >
    <section id="hero" class="pt-0">
      <div class="text-left">
        <h2 class="h1 text-base-100 font-extrabold lsa no-repeat">
          Time for a rebrand, so this site is under construction.
        </h2>
        <p class="h1 lsa no-repeat">Your brand could be next.</p>
      </div>
    </section>

    <section id="description">
      <div class="w-full grid grid-cols-1 md:grid-cols-2 justify-items-end">
        <div>
          <!-- Empty Column -->
        </div>
        <aside class="relative max-w-md text-left lsa no-repeat">
          <p
            class="before:content-[''] before:h-10 before:w-10 before:bg-secondary before:absolute before:-top-14 md:before:top-0 md:before:-left-14"
          >
            {SITE_DESCRIPTION}
          </p>
        </aside>
      </div>
    </section>

    <section id="contact">
      <header class="mb-8 text-left">
        <h2 class="text-xl font-bold mb-2 lsa no-repeat">
          WANT TO DISCUSS YOUR BRAND? <span class="font-normal">Let's chat.</span>
        </h2>
        <p class="lsa no-repeat">
          Whether you're considering refreshing your current branding, or are seeking support with
          the launch of an entirely new business, we're here to help. Contact us for a free
          45-minute consultation.
        </p>
      </header>

      <form id="contact-form" class="space-y-(--site-padding-sm) lsa no-repeat" method="POST">
        <!-- First and Last Name -->
        <fieldset class="grid grid-cols-2 gap-(--site-padding-sm)">
          <legend class="sr-only">Personal Information</legend>
          <label class="sr-only" for="firstName">First Name (required)</label>
          <input
            type="text"
            name="firstName"
            id="firstName"
            placeholder="First Name*"
            class="w-full input input-primary"
            required
            aria-required="true"
          />
          <label class="sr-only" for="lastName">Last Name (required)</label>
          <input
            type="text"
            name="lastName"
            id="lastName"
            placeholder="Last Name*"
            class="w-full input input-primary"
            required
            aria-required="true"
          />
        </fieldset>

        <!-- Business Name -->
        <fieldset>
          <legend class="sr-only">Business Information</legend>
          <label class="sr-only" for="businessName">Business Name (required)</label>
          <input
            type="text"
            name="businessName"
            id="businessName"
            placeholder="Business Name*"
            class="w-full input input-primary"
            required
            aria-required="true"
          />
        </fieldset>

        <!-- Email + Phone -->
        <fieldset class="grid grid-cols-2 gap-(--site-padding-sm)">
          <legend class="sr-only">Contact Information</legend>
          <label class="sr-only" for="email">Email Address (required)</label>
          <input
            type="email"
            name="email"
            id="email"
            placeholder="Email*"
            class="w-full input input-primary"
            required
            aria-required="true"
            aria-describedby="email-help"
          />
          <label class="sr-only" for="phone">Phone Number (required)</label>
          <input
            type="tel"
            name="phone"
            id="phone"
            placeholder="Phone*"
            class="w-full input input-primary"
            required
            aria-required="true"
          />
        </fieldset>

        <!-- Email Subscription Checkbox -->
        <fieldset class="fieldset mb-8">
          <label
            class="label text-primary font-factoria gap-(--site-padding-sm) whitespace-normal uppercase text-left text-sm font-extrabold"
          >
            <input type="checkbox" class="checkbox checkbox-secondary border-primary bg-base-100" />
            Yes! Of course I want to join your email list.
          </label>
        </fieldset>

        <!-- Submit Button -->
        <div class="flex md:justify-end">
          <button
            type="submit"
            class="btn btn-soft w-52 border-secondary flex justify-between px-0 z-10 group"
          >
            <span class="p w-full p-4 font-extrabold">SEND INFO</span>
            <div class="w-1/3 h-full p-2 flex items-center bg-secondary fill-secondary-content">
              <svg
                class="-rotate-45 group-hover:rotate-0 transition-transform duration-200"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                  clip-rule="evenodd"></path>
              </svg>
            </div>
          </button>
        </div>
      </form>
    </section>
  </main>
</Layout>

<style>
  /* Cloud drift animations */
  @keyframes cloudDriftOne {
    0% {
      transform: translate(-50%, -50%) translateX(-25px);
    }
    50% {
      transform: translate(-50%, -50%) translateX(25px);
    }
    100% {
      transform: translate(-50%, -50%) translateX(-25px);
    }
  }

  .cloud-drift-one {
    animation: cloudDriftOne 12s ease-in-out infinite;
  }

  .cloud-drift-two {
    animation: cloudDriftOne 15s ease-in-out infinite;
  }
</style>
